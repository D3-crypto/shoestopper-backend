# Database Configuration
MONGO_URI=mongodb://localhost:27017/shoestopper

# JWT Configuration (Server secrets - same for all users, used to sign unique tokens)
JWT_ACCESS_SECRET=your_super_secret_access_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production

# Email Configuration (Company/Admin email that sends emails to users)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=admin@yourcompany.com
EMAIL_PASS=your-gmail-app-password-here
EMAIL_FROM=ShoeStopper <noreply@yourcompany.com>

# Server Configuration
PORT=4000

# Environment
NODE_ENV=development

# Frontend URLs (for CORS - update with your deployed URLs)
FRONTEND_URL=https://your-username.github.io/shoestopper-frontend
ADMIN_URL=https://your-username.github.io/shoestopper-admin
